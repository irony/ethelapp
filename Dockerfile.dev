# Dockerfile.dev
FROM node:20-slim

WORKDIR /app

# Copy in your package files
COPY package.json package-lock.json* ./

# Install everything (dependencies + devDependencies) at build-time
RUN npm install

# Mount your source over /app, but keep node_modules from the image
VOLUME ["/app/node_modules"]

# Start the Vite dev server (with your package.json "dev" script)
CMD ["npm", "run", "dev"]

