#!/bin/bash

# Check if exactly one argument is provided
if [ "$#" -lt 1 ]; then
    echo "Usage: $0 [up|down]"
    exit 1
fi

# Perform action based on the argument
case $1 in
    up)
        echo "Deploying ethelapp dev stack on port 8444 ..."
        docker compose up -d ethelapp-dev
        ;;
    down)
        echo "Removing ethelapp dev stack from port 8444 ..."
        docker compose down ethelapp-dev
        ;;
    *)
        echo "Invalid argument: $1"
        echo "Usage: $0 [up|down]"
        exit 2
        ;;
esac
